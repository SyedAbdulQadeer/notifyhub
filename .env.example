# Firebase Notification Handler - Environment Configuration
# 
# AlwariDev Firebase Notification Relay Service
# Developed by Syed Abdul Qadeer

# ==========================================
# REQUIRED CONFIGURATION
# ==========================================

# AES encryption key for decrypting Firebase service account configs
# This MUST match the key used by your Flutter client for encryption
# Use a secure random string (32+ characters recommended)
SECRET_KEY=your_32_character_secret_key_here_replace_this

# ==========================================
# OPTIONAL CONFIGURATION
# ==========================================

# Server port (defaults to 3000)
PORT=3000

# Node.js environment (development/production)
NODE_ENV=development

# Logging level (error/warn/info/debug)
LOG_LEVEL=info

# ==========================================
# EXAMPLES
# ==========================================

# Example of a secure secret key (DO NOT use this in production):
# SECRET_KEY=AlwariDev2025SecureKey123456789!

# Production environment example:
# NODE_ENV=production
# LOG_LEVEL=warn
# PORT=8080
